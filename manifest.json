{
  "manifest_version": 3,
  "name": "Contextual Whisper",
  "version": "1.0",
  "description": "AI-powered extension that detects when you need help and offers contextual assistance",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "Contextual Whisper"
  }
}